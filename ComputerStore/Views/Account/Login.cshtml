@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign In</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="~/lib/fontawesome/css/*.css" />
    <link rel="stylesheet" href="~/css/login.css"/>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="card col-md-6">
                    <div class="card-header">
                        <h3>Sign In</h3>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"class="error_msg"></div>
                        <form asp-action="Login" method="post">
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                            <div class="form-group">
                                <div class="error_msg"><span asp-validation-for="Username"></span></div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" asp-for="Username" class="form-control" placeholder="Username" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="error_msg"><span asp-validation-for="Password"></span></div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    </div>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                                </div>
                            </div>
                            <div class="row align-items-center remember">
                                <input type="checkbox" asp-for="RememberMe" /> Remember Me
                            </div>
                            <div class="text-center m-1 p-1">
                                <button type="submit" class="btn login_btn">Sign In</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <hr />
                        <div class="d-flex justify-content-center">
                            <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Sign up</a></p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <p><a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a></p>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>