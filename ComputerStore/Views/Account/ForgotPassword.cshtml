@model ForgotPasswordViewModel
  
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/forgotpassword.css" asp-append-version="true"/>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="card col-md-8">
                <div class="card-header">
                    <h2>Forgot Password</h2>
                </div>
                <div class="card-body">
                    <div class="message">
                        <span>Please fill empty fields for password recovery.</span>
                    </div>
                    <form id="resetPasswordForm" asp-action="ForgotPassword" asp-controller="Account" method="post">
                        <div class="form-group">
                            <div class="text-danger p-1 font-weight-bold">
                                <span asp-validation-for="Username"></span> <br />
                                <span id="username_error"></span>
                            </div>
                            <input asp-for="Username" id="input-username" class="form-control" placeholder="Your username..." />
                        </div>
                        <div class="secret-group-1 m-1 p-1">
                            <div class="form-group">
                                <label>Security question:</label>
                                <div><span id="security_question"></span></div>
                            </div>
                            <div class="form-group">
                                <div class="text-danger p-1 font-weight-bold">
                                    <span asp-validation-for="SecurityQuestionAnswer"></span> <br />
                                    <span id="answer_error"></span>
                                </div>
                                <input asp-for="SecurityQuestionAnswer" id="input-answer" class="form-control" placeholder="Answer..." />
                            </div>
                        </div>
                        <div class="secret-group-2 m-1 p-1">
                            <div class="form-group">
                                <div class="text-danger p-1 font-weight-bold"><span asp-validation-for="Password"></span></div>
                                <input asp-for="Password" id="newPassword" data-toggle="popover" class="form-control" placeholder="Your new password..." />
                            </div>
                            <div class="form-group">
                                <div class="text-danger p-1 font-weight-bold">
                                    <span asp-validation-for="ConfirmPassword"></span>
                                    <span id="newPassword_error"></span>
                                </div>
                                <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm password..." />
                            </div>
                            <div class="text-center m-1 p-1">
                                <button type="submit" class="btn-reset">Reset Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/src/jquery.validate.unobtrusive.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/forgotpassword.js" asp-append-version="true"></script>
</body>
</html>


