@model Order
@inject Countries countries

@{ 
    ViewData["Title"] = "Checkout order";
}


<div class="container-fluid">
    <div class="row justify-content-center m-2 p-2">
        <div class="col-sm-10">
            <h2>Check out now</h2>
            <p>Please enter your details, and we'll ship your goods right away!</p>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <form asp-action="Checkout" method="post">
                <h3>Contact Data</h3>
                <div class="form-group">
                    <label asp-for="FullName">Full name:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="FullName"></span></div>
                    <input asp-for="FullName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="Email"></span></div>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="PhoneNumber"></span></div>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <h3>Address</h3>
                <div class="form-group">
                    <label asp-for="Country">Country:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="Country"></span></div>
                    <select asp-for="Country" class="form-control">
                        <option value="">Select Country</option>
                        @foreach (string country in countries.GetCountries())
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="City">City:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="City"></span></div>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address:</label>
                    <div class="font-weight-bold text-danger"><span asp-validation-for="Address"></span></div>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn m-1" style="width: 250px;height: 45px;border-radius: 25px;background-color: #6F9FD8;color: black;">Complete Order</button>
                </div>
            </form>
        </div>
    </div>
</div>


