@model FilterOptionValue
@{
    ViewData["Title"] = "Add Option Value";
}

<div id="optionValues_container" class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <form id="optionValueForm">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="d-flex flex-row justify-content-center">
                        <label class="font-weight-bold text-right mr-2 p-1" style="width: 30%;">Option:</label>
                        <input type="text" id="optionValue_option_name" class="form-control" style="width: 70%;" disabled />
                    </div>
                </div>
                <div class="form-group">
                    <div id="optionValue_value_error" class="text-danger font-weight-bold m-1 p-1 text-center"></div>
                    <div class="d-flex flex-row justify-content-center">
                        <label class="font-weight-bold text-right mr-2 p-1" style="width: 30%;">Value:</label>
                        <input type="text" id="optionValue_value" class="form-control" style="width: 70%;" />
                    </div>
                </div>
                <input type="hidden" name="optionValue_optionId" value="@Model.FilterOptionID" />
                <div class="form-group text-center">
                    <button type="button" id="add_optionValue_value_btn" class="btn btn-primary" style="width: 250px; border-radius: 25px;">Add Value</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <div id="no_optionValue_message" class="text-center font-weight-bold" style="display: none; font-family: Numans, sans-serif;">
                <h4>No value was found for this option!</h4>
            </div>
            <div id="info_message" style="display: none;">
                <p class="text-center" style="font-style:italic;">
                    *To edit value click on it, enter a new one and press button edit.
                </p>
            </div>
            <table id="optionValue_table" class="table table-sm table-hover table-bordered">
                <thead class="text-white" style="background-color: #5A3E36;">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
