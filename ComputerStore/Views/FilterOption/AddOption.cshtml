@model FilterOption
@{
    ViewData["Title"] = "Add New Option";
}

<div id="filterOptions_container" class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <form id="filterOptionForm">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="d-flex flex-row justify-content-center">
                        <label class="font-weight-bold text-right mr-2 p-1" style="width: 30%;">Subcategory:</label>
                        <input type="text" id="filterOption_subcategory_name" class="form-control" style="width: 70%;" disabled/>
                    </div>
                </div>
                <div class="form-group">
                    <div id="filterOption_name_error" class="text-danger font-weight-bold m-1 p-1 text-center"></div>
                    <div class="d-flex flex-row justify-content-center">
                        <label class="font-weight-bold text-right mr-2 p-1" style="width: 30%;">Name:</label>
                        <input type="text" id="filterOption_name" class="form-control" style="width: 70%;" />
                    </div>
                </div>
                <input type="hidden" name="filterOption_subcategoryId" value="@Model.SubcategoryID" />
                <div class="form-group text-center">
                    <button type="button" id="add_filterOptionName_btn" class="btn btn-primary" style="width: 250px; border-radius: 25px;">Add Option</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <div id="no_filterOption_message" class="text-center font-weight-bold" style="display: none; font-family: Numans, sans-serif;">
                <h4>No option was found for this subcategory!</h4>
            </div>
            <div id="info_message" style="display: none;">
                <p class="text-center" style="font-style:italic;">
                    *To edit option name click on it, enter a new one and press button edit.
                </p>
            </div>
            <table id="filterOption_table" class="table table-sm table-hover table-bordered">
                <thead style="background-color: #F5D6C6;">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
