@inject ICategoryRepository categoryRepos
@{
    ViewData["Title"] = "Manage Subcategories";
}

<div id="subcategories_container" class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="d-flex justify-content-center m-1 p-1">
                <form id="subcategoryForm">
                    @Html.AntiForgeryToken()
                    <div class="md-form form-group">
                        
                        <select id="selectCategory" class="mdb-select">
                            <option value="">Select Category</option>
                            @foreach (Category category in categoryRepos.Categories)
                            {
                                <option value="@category.Name">@category.Name</option>
                            }
                        </select>
                    </div>
                    <div id="subcategory_block" style="display: none;">
                        <div class="form-group">
                            <div id="subcategory_name_error" class=" d-flex justify-content-center text-danger font-weight-bold m-1 p-1"></div>
                            <div class="d-flex justify-content-center">
                                <input class="form-control" id="subcategory_name" placeholder="New Subcategory...." style="width: 450px;" />
                            </div>
                        </div>
                        <div class="form-group d-flex justify-content-center">
                            <button type="button" class="btn btn-primary" id="add_subcategory_btn" style="border-radius: 25px; height: 50px; width: 250px;">Add Subcategory</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <div id="no_subcategories_message" class="text-center" style="display: none;font-family: Numans, sans-serif;">
                <h4>This category has no subcategories!</h4>
            </div>
            <div id="info_message" style="display: none;">
                <p class="text-center" style="font-style:italic;">
                    *To edit subcategory focus on its name, enter a new one and press button edit.
                </p>
            </div>
            <table id="subcategory_table" class="table table-sm table-bordered table-hover" style="display: none;">
                <thead class="text-white" style="background-color: #6B5B95;">
                    <tr class="text-center">
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

